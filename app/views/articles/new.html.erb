<div style="width:80%;margin:0 auto;">

	<%= form_for(@article) do |f| %>
		<div class="field">
			<%= f.text_field :title, placeholder: "Título", class:"form-control" %>
		</div>
		<div class="field">
			<%= f.text_area :body, placeholder: "Escribe aquí el articulo", style: "height:250px;", class:"form-control" %>
		</div>
	
		<div class="field">
			<%= f.submit "Guardar", class: "btn btn-primary" %>
		</div>
	<% end %>
</div>