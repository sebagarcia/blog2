<%= form_for(@course) do |f| %>
  <% @course.errors.full_messages.each do |message| %>
    <div>
      * <%= message %>
    </div>
  <% end %>
  <div class="field">
    <%= f.text_field :teacher_id, placeholder: "id profesor", class:"form-control" %>
  </div>
  <div class="field">
    <%= f.text_field :name, placeholder: "Nombre", class:"form-control" %>
  </div>

  <div class="field">
    <%= f.submit "Guardar", class: "btn btn-primary" %>
    <%= link_to 'Atras', courses_path, class: "btn btn-primary" %>
  </div>
<% end %>
